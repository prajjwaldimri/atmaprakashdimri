extend layout.pug

block content
  .columns
    .column.is-4.is-offset-4
      .box.is-primary
        h1.title.has-text-centered Admin Login
        .field
          label.label.is-medium Email
          .control.has-icons-left
            input(class="input", type="email", placeholder="test@example.com", required)
            span(class="icon is-small is-left")
              i.fas.fa-envelope
        .field
          label.label.is-medium Password
          .control.has-icons-left
            input(class="input", type="password", required)
            span(class="icon is-small is-left")
              i.fas.fa-lock

        .field.is-grouped
          .control
            button(class="button is-success") Login
          .control
            button(class="button is-light") Cancel