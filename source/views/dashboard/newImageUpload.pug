extends dashboardLayout.pug

block content
  include ../includes/topnav.pug
  .columns
    include ../includes/adminDashboard.pug

    .column.is-8
      include ../includes/notification.pug
      form(action="/newBlogPost", method="post", style="padding-top: 4%")
        .field
          label.label Blog Post Title
          .control
            input.input(type="text", name="blogTitle")

        .field
          label.label Blog Post Content
          .control
            textarea.textarea(name="blogContent")