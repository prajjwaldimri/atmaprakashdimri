extends dashboardLayout.pug

block content
  include ../includes/topnav.pug
  .columns
    include ../includes/adminDashboard.pug

    .column.is-8
      include ../includes/notification.pug
      form(action="/adminDashboard/editPassword", method="post", style="padding-top: 4%")
        .field
          label.label Current Password
          .control
            input.input(type="password", name="currentPassword")

        .field
          label.label New Password
          .control
            input.input(type="password", name="newPassword")

        .field
          label.label Confirm New Password
          .control
            input.input(type="password", name="confirmNewPassword")
        
        .field
          .control
            button.button.is-link(type="submit")
              span.icon
                i.fas.fa-key
              span Change Password