extends dashboardLayout.pug

block content
  .columns
    include ../includes/adminDashboard.pug

    .column.is-8
      include ../includes/notification.pug
      form(action="", method="post", style="padding-top: 4%", enctype="multipart/form-data")
        .field
          .file.has-name.is-fullwidth
            label.file-label
              input.file-input(type="file", name="uploadedImage")
              span.file-cta
                span.file-icon
                  i.fas.fa-upload
                span.file-label Choose an image...
              span.file-name

        .field
          label.label Blog Post Title
          .control
            input.input(type="text", name="blogTitle", value=blog.title)

        .field
          label.label Blog Post Content
          .control
            textarea.textarea(name="blogContent")=blog.content

        .field
          .control
            button.button.is-link(type="submit")
              span.icon
                i.fas.fa-upload
              span Update