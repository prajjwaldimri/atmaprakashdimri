extends dashboardLayout.pug

block content
  .columns
    include ../includes/adminDashboard.pug

    .column.is-8
      include ../includes/notification.pug
      each award in awards
        .card(style="margin-top: 4%")
          header.card-header
            p.card-header-title=award.name
          .card-content
            .content=award.long_description
          footer.card-footer
            a.card-footer-item(href="/adminDashboard/editAward/" + award._id) Edit
            a.card-footer-item(href="/adminDashboard/deleteAward/" + award._id, style="background: #eee") Delete

